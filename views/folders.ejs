<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <a href="/">go back</a>
    <div class="app-container">
      <div class="header-container">
        <h1 class="app-title">File Uploader</h1>
        <div class="header-buttons">
          <a href="/log-out" class="button">Log Out</a>
        </div>
      </div>
      <div class="main-container">
        <h1>Welocme to folders</h1>
        <a href="/drive">My drive</a> ...>...
        <a href=""><%= currFolder.name %></a>
        <br />
        <br />

        <br />
        <br />
        <button id="createFolderBtn">Create folder</button>
        <div id="folderModal" class="modal">
          <h2>Add folder</h2>
          <form action="/folder" method="get">
            <label for="folderName">Folder name</label>
            <input
              type="text"
              id="folderName"
              name="folderName"
              minlength="1"
              maxlength="15"
              required
            />
            <button type="submit">Create</button>
          </form>
        </div>
        <button>Upload file</button>

        <% if(childFolders && childFolders.length > 0) { %> <%
        childFolders.forEach((folder) => { %>
        <button><%= folder.name %></button>
        <% }) } else { %>
        <h3>No files in folder</h3>
        <%} %>
      </div>
    </div>
    <script>
      // Get the modal
      const addFolderModal = document.getElementById("folderModal");

      const btnAddFolder = document.getElementById("createFolderBtn");

      btnAddFolder.onclick = function () {
        console.log(addFolderModal);

        addFolderModal.style.display = "block";
      };

      // When the user clicks anywhere outside of the modal, close it
      window.onclick = function (event) {
        if (event.target == addFolderModal) {
          addFolderModal.style.display = "none";
        }
      };
    </script>
  </body>
</html>
